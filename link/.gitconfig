[core]
	hooksPath = ~/.config/git
	editor = vim
[submodule]
	recurse = true
[user]
	name = asnr
	email = asnr@users.noreply.github.com
[includeIf "gitdir:~/work/"]
	path = .gitconfig_work
[init]
	defaultBranch = main
[diff]
	algorithm = histogram
	colorMoved = plain
	mnemonicPrefix = true
	renames = true
[push]
    autoSetupRemote = true
	followTags = true
